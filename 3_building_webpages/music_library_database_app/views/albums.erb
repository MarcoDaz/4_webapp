<!-- GET /albums -->

<html>
  <head>
    <title>Albums</title>
  </head>
  <body>
    <h1>Albums</h1>
    <a href="/albums/new"><button>Add Album</button></a><br><br>
    <% @albums.each do |album| %>
      <div>
        Title: <a href="<%= "albums/#{album.id}" %>"><%= album.title %></a><br>
        Release Year: <%= album.release_year %>
      </div>
      <br>
    <% end %>
</html>